<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nasersalameh.imposterphenomenoninterventionapp">

<!--    Permissions for read and write to storage-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImposterPhenomenonInterventionApp">

        <!-- Setup Activity        -->
        <activity android:name=".activities.setup.SetupActivity" />

        <!-- Startup Activity        -->
        <activity android:name=".activities.startup.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity        -->
        <activity
            android:name=".activities.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.ImposterPhenomenonInterventionApp.NoActionBar"></activity>

        <!-- View Information Activity        -->
        <activity android:name=".activities.main.information.InformationCardActivity"
            android:theme="@style/Theme.ImposterPhenomenonInterventionApp.NoActionBar">

        </activity>

        <!-- Add Achievement Activity        -->
        <activity android:name=".activities.main.achievements.AchievementAddActivity"
            android:theme="@style/Theme.ImposterPhenomenonInterventionApp.NoActionBar">

        </activity>

        <!-- Add Goal Activity        -->
        <activity android:name=".activities.main.goals.GoalAddActivity"
            android:theme="@style/Theme.ImposterPhenomenonInterventionApp.NoActionBar">

        </activity>

        <!-- Add Reflection Activity        -->
        <activity android:name=".activities.main.goals.GoalReflectionActivity"
            android:theme="@style/Theme.ImposterPhenomenonInterventionApp.NoActionBar">

        </activity>

        <!-- View Reflection Activity        -->
        <activity android:name=".activities.main.reflections.ReflectionCardActivity"
            android:theme="@style/Theme.ImposterPhenomenonInterventionApp.NoActionBar">

        </activity>

    </application>

</manifest>